@using AuctionApplication.DTOs.ResponseModels
@model AssetResponseModel
<div>
    <div >
        
    <div style="display: flex; align-items:center; justify-content:center; flex-direction: column; gap:1rem; padding-bottom: 3rem;">
    <div width="400px"><img src="~/images/@Model.Data.ImageUrl" style="" width="500px" height="400px" alt=""></div>
    <div style="flex: 1;">
        <div>
            <h5>Asset Name: @Model.Data.AssetName</h5>
            <h5>Asset Status: @Model.Data.AssetStatus</h5>
            <h5>Price: @Model.Data.Price</h5>
            <h5>Sold Price: @Model.Data.SoldPrice</h5>
            <h5>Highest Bid: @Model.Data.HighestBid</h5>
        </div>
        <a asp-controller="Bidding" asp-action="IncreaseBiddingPrice" asp-route-id="@Model.Data.AssetId" class="btn btn-secondary">Update bid</a>
    </div>
    </div>
    </div>
    <div>
        @if (@Model.Data.Biddings.Count > 0)
        {
            <table class="table">
                <caption>All Biddings</caption>
                <thead>
                    <tr>
                        <th>Bider</th>
                        <th>Bid Price </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bid in @Model.Data.Biddings)
                    {
                        <tr>
                            <th>@bid.CustomerName</th>
                            <th>@bid.Price</th>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>